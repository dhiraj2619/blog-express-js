<%- include('./header.ejs')%>

<div class="main-content">
    <div class="container position-relative">
        <h5 class="text-dark py-2">Add blog</h5>
        <div class="position-absolute end-0 top-0">
            <% if (messages.error) { %>
                <div class="">
                    <div class="alert alert-danger alert-dismissible" id="errorAlert">
                        <%= messages.error %>
                        <button type="button" class="btn-close" style="font-size: 13px;" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                </div>
                <% } %>
        </div>
        <div class="position-absolute end-0 top-0">
            <% if (messages.success) { %>
                <div class="">
                    <div class="alert alert-success alert-dismissible" id="successAlert">
                        <%= messages.success %>
                        <button type="button" class="btn-close" style="font-size: 13px;" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                </div>
                <% } %>
        </div>
      
        <form action="add" method="post" class="row g-3 mt-4">
            <div class="col-lg-6 col-sm-6 col-12">
                <label for="" class="form-label small">Title</label>
                <input type="text" class="form-control addblog" placeholder="blog title" name="title">
            </div>
            <div class="col-lg-6 col-sm-6 col-12">
                <label for="" class="form-label small">Blog date</label>
                <input type="date" class="form-control addblog" placeholder="blog date" name="date">
            </div>
            <div class="col-lg-12 col-12">
                <label for="" class="form-label small">Blog content</label>
                 <textarea name="content" class="form-control addblog" placeholder="description of blog..." rows="7"></textarea>
            </div>
        
            <div class="mt-3">
                <button class="btn btn-dark" type="submit">submit</button>
            </div>
        </form>
    </div>
</div>

<%- include('./footer.ejs')%>